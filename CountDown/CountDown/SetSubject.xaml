<Window x:Class="CountDown.SetSubject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CountDown"
        mc:Ignorable="d"
        Title="SetSubject" Height="200" Width="300">
    <Grid  Background="#FF5BA6E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBox Margin="20" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" TextAlignment="Center" FontSize="30" Name="subject_text_box"></TextBox>
        <Button Margin="5" Grid.Row="1" Click="Button_Click">OK</Button>
    </Grid>
</Window>
